programa {
  inteiro n1, n2, res // Declarando a variável dos números

  funcao inicio() {
  escreva("Digite um valor: \n")
  leia(n1)// Entrada do primeiro

  escreva("Digite outro valor: \n")
  leia(n2)// Entrada do segundo

  res = n1 + n2 //processamento das váriáveis para se transformarem na soma

  escreva("A soma entre ", n1," e ",n2," é igual a: ",res)//Saída das variáveis
  }
}
