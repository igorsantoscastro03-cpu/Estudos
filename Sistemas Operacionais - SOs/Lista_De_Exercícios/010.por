programa {
  
  real lar, alt
  funcao inicio() {

    escreva("indique a largura de sua parede: ","m\n")
    leia(lar)

    escreva("Indique a altura de sua parede: ","m\n")
    leia(alt)

    escreva("Você tem uma área de ", alt * lar,"m² para pintar\n")

    escreva("Você precisará de ",alt * lar / 2,"L de tinta para pintar sua parede" )

  

    
  }
}
