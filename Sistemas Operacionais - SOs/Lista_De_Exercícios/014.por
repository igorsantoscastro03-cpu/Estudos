programa {
  
  real km, dias, kmd
  funcao inicio() {

  escreva("Informe a quantidade de km's rodados: ","Km\n")
  leia(km)

  escreva("Informe a quantidade de dias que foi alugado: \n")
  leia(dias)

  kmd = km * 0.20 + dias * 90

  escreva("Esse será o preço a pagar pelo aluguel do carro: R$", kmd)



  

    
  }
}
